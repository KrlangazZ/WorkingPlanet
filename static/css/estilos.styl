@import "foo.styl"

body
	font-family "Open Sans" sans-serif
	font-size 16px
	margin 0
	background-color: #b8d6d6
	
.Header
	background url('../img/Header.jpg')
	background-repeat no-repeat
	background-size cover
	height 6em
	text-align: center
	
	
.Header-title
	    color: #8fc246
	    font-size 2em
	    line-height 3em
	    margin 0
	    padding: 0
	    word-spacing: .5em	
		
.Content
	text-align center
	margin-top: 1em 
	
	
	
.Content-form
	background-color #2b78e4
	border none
	border-radius: 1em	
	box-shadow: 0px 0px 0px 5px #00ff48
	display: block
	margin 5em auto
	max-width: 20em
	position: relative	
	text-align center
	span
		margin-top 1em
		font-size 2em
	
	
.Content-formInput
	
	border none
	border-radius: 1.5em	
	margin 2em 4em
	padding .5em 2em .5em 2em
	text-align center
	&:focus
		outline: none

.Content-formButton
	background-color #00ff48
	border none
	border-radius 1.5em
	box-shadow: 0px 0px 0px 5px #00ff48
	margin 1em auto 
	padding .5em 2em .5em 2em
	position: relative	
	&:focus
		outline: none	

.Debug
	float: right
	border 2px solid #100
	padding: 10em
	margin-right: 1em
	margin-bottom: 1em
	font-weight: bold
	

.Footer
	text-align center
	font-size: 1.1em
	


.Select
	display block
	margin-top 2em
	margin-left: 5em
	text-align left
	
.Select-name
	display none
.Select-mes
	background-color #8fc246
	border none
	border-radius 1.5em
	color #3F505C
	font-weight: bold
.Feriado
	background-color: #f76f6a
	font-weight: bold
	color #910808

.Timesheet
	text-align center
.Timesheet-table
	border: 1px solid #7a7;
	margin 1em auto
	th 
		border: 1px solid #7a7;
	td 
		border: 1px solid #7a7;
		text-align center
.Timesheet-tableHead
	margin-top 1em auto	
.Timesheet-tableBody
	margin-top 1em auto	
	
// input[type:number]
.Timesheet-tableInput
	width 2.5em
	text-align center
	

	