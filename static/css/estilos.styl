@import "foo.styl"
body
	font-size 16px
	margin 0
	background-color: #b8d6d6
	
.Header
	background url('../img/Header.jpg')
	background-repeat no-repeat
	background-size cover
	height 6em
	text-align: center
	
	
.Header-title
	    color: #8fc246
	    font-size 2em
	    line-height 3em
	    margin 0
	    padding: 0
	    word-spacing: .5em	
		
.Content
	text-align center
	margin-top: 1em 
	
	
	
.Content-form
	background-color #2b78e4
	border none
	border-radius: 1em	
	display: block
	margin 5em auto
	max-width: 20em
	text-align center
	position: relative	
	box-shadow: 0px 0px 0px 5px #00ff48
	span
		margin-top 1em
		font-size 2em
	
	
.Content-formInput
	
	border none
	border-radius: 1.5em	
	margin 2em 4em
	padding .5em 2em .5em 2em
	text-align center
	&:focus
		outline: none

.Content-formButton
	background-color #00ff48
	border none
	border-radius 1.5em
	margin 1em auto 
	padding .5em 2em .5em 2em
	position: relative	
	box-shadow: 0px 0px 0px 5px #00ff48
	&:focus
		outline: none	
	
.Footer
	text-align center
	font-size: 1.1em
	


.Select
	display block
	margin-top 2em
	text-align center

.Timesheet
	text-align center
.Timesheet-table
	border: 1px solid #7a7;
	margin 1em auto
.Timesheet-tableHead
	margin-top 1em auto	
.Timesheet-tableBody
	margin-top 1em auto	
	
// input[type:number]
.Timesheet-tableInput
	width 2.5em
	text-align center
	

	